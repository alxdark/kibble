<p align="left">
    <%= link_to 'New Category', new_category_path, {:class => 'btn btn-primary'} %>
</p>
<% unless (@categories.empty?) %>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Available For</th>
                <th width="100"></th>
            </tr>
        </thead>
        <tbody>
            <% @categories.each do |category| %>
                <tr>
                    <td><%= link_to category.name, edit_category_path(category) %></td>
                    <td><%= category.available_for.split('|').reject!(&:blank?).join(', ') %></td>
                    <td>
                        <%= link_to 'Delete', category, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% else %>
    <p>No categories. </p>
<% end %>
