<%= render :partial => "shared/errors", :locals => { :model => @rule } %>
<%= form_for(@rule, :html => {:class => 'form-horizontal' }) do |f| %> 
    <div class="control-group <%= is_error?(@rule, :identifier) %>">
        <%= f.label :identifier, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :identifier %><span class="help-inline"><%= @rule.errors[:identifier].join(", ") %></span>
        </div>
    </div>
    <div class="control-group <%= is_error?(@rule, :parameters) %>">
        <%= f.label :parameters, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :parameters %><span class="help-inline"><%= @rule.errors[:parameters].join(", ") %></span>
        </div>
    </div>
    <%= render 'shared/keys' %>
<% end %>
