<%= render :partial => "shared/errors", :locals => { :model => @tag } %>
<%= form_for(@tag, :html => {:class => 'form-horizontal' }) do |f| %> 
    <div class="control-group <%= is_error?(@tag, :name) %>">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :name, :style => "font-weight: bold", :tabindex => 0 %><span class="help-inline"><%= @tag.errors[:name].join(", ") %></span>
        </div>
    </div>
    <div class="control-group <%= is_error?(@tag, :cat) %>">
        <%= f.label :cat, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :cat %><span class="help-inline"><%= @tag.errors[:cat].join(", ") %></span>
        </div>
    </div>
    <div class="control-group <%= is_error?(@tag, :rel) %>">
        <%= f.label :rel, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :rel %><span class="help-inline"><%= @tag.errors[:rel].join(", ") %></span>
            <span class="helptext">Pipe-delimited set of model names, e.g. "|item|profession|"</span>
        </div>
    </div>
    <div class="control-group <%= is_error?(@tag, :description) %>">
        <%= f.label :description, :class => 'control-label' %>
        <div class="controls">
            <%= f.text_area :description, :rows => 4 %><span class="help-inline"><%= @tag.errors[:description].join(", ") %></span>
        </div>
    </div>
    <div class="control-group">
        <label class="control-label"></label>
        <div class="controls">
            <%= (@tag.items + @tag.professions + @tag.stores).map {|tag| tag.name}.join(", ") %>
        </div>
    </div>
    <%= render 'shared/keys' %>
<% end %>
